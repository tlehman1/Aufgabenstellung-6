extends layout

block content
  header
    // add a bootstrap navbar
    // Documentation about navbars at https://getbootstrap.com/docs/5.2/components/navbar/
  nav#myfirstnavbar.navbar.navbar-expand-md.navbar-dark.bg-primary.mb-4
    .container-fluid
      a.navbar-brand(href='#')= title
      i.bi.bi-camera.me-3
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon

  h3 Welcome to the #{title}
  br
  br 
  // adapter from https://getbootstrap.com/docs/4.0/components/forms/#horizontal-form
  .container
    .row.justify-content-md-center
      form(action="/add/newpoi" method="post")
        fieldset
          .form-group.row.mb-1
            label.col-sm-2.col-form-label(for="poiname") POI Name
            .col-sm-6
              input#poiname.form-control(type="text" name="pname" placeholder="Enter POI Name")
          .form-group.row.mb-1
            label.col-sm-2.col-form-label(for="cityname") City Name
            .col-sm-6
              input#cityname.form-control(type="text" name="cname" placeholder="Enter City Name")
          .form-group.row.mb-1
            label.col-sm-2.col-form-label(for="coordinates") Coordinates
            .col-sm-6
              input#coordinates.form-control(type="text" aria-describedby="coordinatesHelp" name="longlat" placeholder="Enter Coordinates")
              small#coordinatesHelp.form-text.text-muted Coordinates should follow the long/lat order.
          .form-group.row.mb-1
            label.col-sm-2.col-form-label(for="picturelink") Link
            .col-sm-6
              input#picturelink.form-control(type="url" name="picurl" placeholder="Enter link to the picture")
          button.btn.btn-primary.mb-2(type="submit") Send

block foot 
  footer
  .navbar.navbar-expand-md.fixed-bottom.bg-primary.justify-content-center
    span.text-white This is a simple example of footer.